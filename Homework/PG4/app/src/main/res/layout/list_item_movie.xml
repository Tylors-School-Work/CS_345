<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <TextView
        android:id="@+id/movie_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/date_released_tv"
        android:text="Movie Title"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/movie_director_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/movie_title_tv"
        android:layout_toLeftOf="@id/date_released_tv"
        android:text="Director"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/star_count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:padding="4dp"
        android:text="Star Rating" />

    <TextView
        android:id="@+id/date_released_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30dp"
        android:layout_toLeftOf="@id/star_count_tv"
        android:text="Date Released" />
</RelativeLayout>