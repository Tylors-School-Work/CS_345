        <item name="colorPrimary">#66bb6a</item>
        <item name="colorPrimaryVariant">#98ee99</item>
        <item name="colorOnPrimary">#338a3e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#00897b</item>
        <item name="colorSecondaryVariant">#4ebaaa</item>
        <item name="colorOnSecondary">#005b4f</item>
